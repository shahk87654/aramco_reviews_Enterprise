# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=aramco_reviews
DB_SSL=false

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRY=30d

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=aramco-reviews-media

# RabbitMQ / Message Queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@aramcoreview.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# LLM / AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_API_KEY=your-anthropic-api-key

# Translation Service
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key

# Sentiment Analysis
HUGGINGFACE_API_KEY=your-huggingface-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_SUMMARIZATION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_AUTO_TRANSLATION=true
ENABLE_SPIKE_DETECTION=true

# Alert Configuration
DEFAULT_NEGATIVE_RATING_THRESHOLD=3
DEFAULT_SPIKE_PERCENTAGE=30
DEFAULT_SPIKE_LOOKBACK_HOURS=24
DEFAULT_ESCALATION_SLA_HOURS=24

# Geo-verification
GEO_VERIFICATION_ENABLED=true
GEO_VERIFICATION_RADIUS_METERS=500

# File Upload
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,webm,pdf
