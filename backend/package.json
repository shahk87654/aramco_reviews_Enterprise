{
  "name": "aramco-reviews-backend",
  "version": "1.0.0",
  "description": "NestJS backend API for Aramco Reviews",
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migrate:latest": "npm run typeorm migration:run -- -d ./src/database/data-source.ts",
    "migrate:revert": "npm run typeorm migration:revert -- -d ./src/database/data-source.ts",
    "migrate:create": "npm run typeorm migration:create -- ./src/database/migrations",
    "seed": "ts-node -r tsconfig-paths/register ./src/database/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^9.4.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.0",
    "@types/qrcode": "^1.5.6",
    "amqplib": "^0.10.3",
    "aws-sdk": "^2.1500.0",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^12.4.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.8.1",
    "dotenv": "^16.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.0",
    "joi": "^17.11.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.0",
    "sharp": "^0.32.0",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.16",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.8.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^3.0.10",
    "@types/passport-local": "^1.0.35",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.2.0"
  }
}
