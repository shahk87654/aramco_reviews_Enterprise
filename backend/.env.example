# Database Configuration
DB_TYPE=sqlite
DB_PATH=./aramco_reviews.sqlite
# For PostgreSQL:
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=your_password
# DB_NAME=aramco_reviews
# DB_SSL=false

# Server Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@aramcoreviewsenterp rise.com

# Google Gemini AI Integration
GEMINI_API_KEY=your_gemini_api_key_here

# AWS S3 Configuration (Optional - for media uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=your_bucket_name

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration (Optional - for background jobs)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:3001
